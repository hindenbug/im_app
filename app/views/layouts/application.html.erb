<!DOCTYPE html>
<html>
  <head>
    <title>ImApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= action_cable_meta_tag %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">IM APP</a>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <div class="form-group">
              <%= form_tag change_dialect_path, id: 'dialect-form', class: "navbar-form navbar-left" do %>
                <div class="form-material clearfix">
                  <%= label_tag(:dialect, "Dialect", class: "") %>
                  <%= select_tag(:dialect, options_for_select(options_for_select(["Yoda", "Valley Girl", "Binary"], current_user.dialect)), class: "form-control") %>
                </div>
              <% end %>
            </div>
            <div>
              Signed in as <strong>@<%= current_user.username %></strong>
              <%= link_to "Logout", sessions_path, method: :delete %>
            </div>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="fluid-container" style="margin-top: 70px">
      <div class="row">
        <img class="yoda-dialect-icon"/>
        <%= yield %>
      </div>
    </div>

  </body>
</html>
